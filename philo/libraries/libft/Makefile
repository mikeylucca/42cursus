SRCS 			= ft_isalnum.c ft_isprint.c ft_memcmp.c  ft_putchar_fd.c ft_split.c \
					ft_strlcat.c ft_strncmp.c ft_substr.c ft_atoi.c ft_isalpha.c \
					ft_itoa.c ft_memcpy.c  ft_putendl_fd.c ft_strchr.c  ft_strlcpy.c \
					ft_strnstr.c ft_tolower.c ft_bzero.c   ft_isascii.c ft_strtrim.c \
					ft_memmove.c ft_putnbr_fd.c  ft_strdup.c  ft_strlen.c  ft_strrchr.c \
					ft_toupper.c ft_calloc.c  ft_isdigit.c ft_memchr.c  ft_memset.c  \
					ft_putstr_fd.c  ft_strjoin.c ft_strmapi.c ft_striteri.c ft_append_c.c \
					ft_split_mult.c ft_lstadd_back.c ft_lstadd_front.c ft_lstclear.c \
					ft_lstdelone.c ft_lstiter.c ft_lstlast.c ft_lstmap.c ft_lstnew.c \
					ft_lstsize.c ft_printf.c ft_print_char.c ft_print_str.c ft_printunsigned.c \
					ft_print_hex.c ft_print_pointer.c ft_print_digit.c ft_atol.c \


OBJS			= $(SRCS:.c=.o)

CC 				= @cc
RM 				= @rm -f

CFLAGS 			= -Wall -Wextra -Werror

NAME 			= libft.a

all:	$(NAME)

$(NAME):		$(OBJS)
					@ar rcs $(NAME) $(OBJS)
					@echo "Making all .o files"

clean:	
				$(RM) $(OBJS)
				@echo "Cleaning .o files"

fclean:			clean
					$(RM) $(NAME)
					@echo "Full clean done."

re:				fclean $(NAME)
				@echo "Redone."

.PHONY:			all clean fclean re bonus